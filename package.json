{
  "name": "factory-js",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "test:coverage": "turbo run test:coverage",
    "lint": "eslint --max-warnings=0 '**/*.{ts,js,cjs,mjs}'",
    "type-check": "turbo run type-check",
    "db:generate": "turbo run db:generate",
    "db:reset": "turbo run db:reset",
    "clean": "turbo run clean && rm -rf node_modules .turbo",
    "format": "prettier --check .",
    "format:fix": "turbo run format:fix && prettier -w .",
    "secretlint": "secretlint --secretlintignore .gitignore --maskSecrets '**/*'",
    "prepare": "husky",
    "publish-packages": "turbo run build && changeset publish"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.0",
    "@changesets/cli": "^2.27.1",
    "@eslint/js": "^9.17.0",
    "@secretlint/secretlint-rule-preset-recommend": "^9.0.0",
    "@tsconfig/strictest": "^2.0.2",
    "@typescript-eslint/eslint-plugin": "^8.18.0",
    "@typescript-eslint/parser": "^8.18.0",
    "eslint": "9.24.0",
    "eslint-config-prettier": "^10.0.0",
    "eslint-import-resolver-typescript": "^4.0.0",
    "eslint-plugin-import": "^2.31.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.0.0",
    "prettier": "^3.2.5",
    "secretlint": "^9.0.0",
    "turbo": "^2.0.0",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.18.0"
  },
  "engines": {
    "node": ">=18",
    "pnpm": "^9.0.0"
  },
  "packageManager": "pnpm@9.15.9"
}
