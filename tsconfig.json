{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@tsconfig/strictest/tsconfig.json",
  "compilerOptions": {
    "target": "es2020",
    "lib": ["esnext"],
    "noEmit": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "incremental": false,
    "allowJs": false,
    "checkJs": false
  },
  "exclude": ["node_modules"]
}
