generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["strictUndefinedChecks"]
}

generator factory {
  provider   = "tsx ./dist/bin.cjs"
  randModule = "../dist"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  USER
  ADMIN
}

model User {
  id        Int      @id
  firstName String
  lastName  String
  role      Role
  profile   Profile?
  session   Session?
  posts     Post[]   @relation("author")

  @@unique([firstName, lastName])
}

model Session {
  id     Int    @id
  userId Int    @unique
  token  String
  user   User   @relation(fields: [userId], references: [id])
}

model Profile {
  id        Int    @id
  user      User   @relation(fields: [firstName, lastName], references: [firstName, lastName])
  firstName String
  lastName  String

  @@unique([firstName, lastName])
}

model Post {
  id          Int                 @id
  description String              @unique
  authorId    Int
  author      User                @relation(name: "author", fields: [authorId], references: [id])
  categories  CategoriesOnPosts[]
}

model CategoriesOnPosts {
  post       Post     @relation(fields: [postId], references: [id])
  postId     Int
  category   Category @relation(fields: [categoryId], references: [id])
  categoryId Int

  @@id([postId, categoryId])
}

model Category {
  id    Int                 @id
  name  String
  posts CategoriesOnPosts[]
}

model Folder {
  id       Int      @id
  name     String?
  parentId Int?
  parent   Folder?  @relation("Folder", fields: [parentId], references: [id])
  children Folder[] @relation("Folder")
}

model AllTypes {
  bigInt   BigInt   @id
  bytes    Bytes
  boolean  Boolean
  dateTime DateTime
  decimal  Decimal
  float    Float
  string   String
  int      Int
  json     Json
  enum     Role
  array    String[]
}

model user_event_log {
  id Int @id
}
