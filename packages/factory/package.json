{
  "name": "@factory-js/factory",
  "version": "0.2.1",
  "private": false,
  "author": "Tomoyuki Kai <ktmouk@gmail.com>",
  "description": "🏭 The ORM-agnostic object generator for testing",
  "license": "MIT",
  "keywords": [
    "typescript",
    "factory",
    "test",
    "orm",
    "prisma",
    "drizzle"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/factory-js/factory-js.git",
    "directory": "packages/factory"
  },
  "bugs": "https://github.com/factory-js/factory-js/issues",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "clean": "rm -rf node_modules .turbo dist"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^1.0.0",
    "lint-staged": "^15.0.0",
    "tsup": "^8.0.2",
    "typescript": "5.5.2",
    "vitest": "^1.4.0"
  }
}
